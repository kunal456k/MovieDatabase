<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragments.HomeFragment">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:name="com.kunal456k.moviedatabase.views.fragments.NowPlayingFragment"
        android:id="@+id/playing_now_fragment"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/trending_now_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:name="com.kunal456k.moviedatabase.views.fragments.TrendingFragment"/>

</androidx.appcompat.widget.LinearLayoutCompat>