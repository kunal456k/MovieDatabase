<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="movie"
            type="com.kunal456k.moviedatabase.models.Movie" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        android:background="@color/teal_200"
        app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:baselineAlignBottom="true"
                android:id="@+id/movie_imageview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/image_guide"
                android:contentDescription="@string/movie_image" />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"
                android:id="@+id/image_guide"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/movie_title_tv"
                android:text="@{movie.title}"
                android:autoSizeTextType="uniform"
                android:layout_marginHorizontal="15dp"
                android:maxLines="1"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_guide"
                app:layout_constraintBottom_toTopOf="@id/title_guideline"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9"
                android:id="@+id/title_guideline"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{``+movie.rating}"
                android:id="@+id/movie_rating_tv"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="12sp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/title_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>